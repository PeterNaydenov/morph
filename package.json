{
    "name": "@peter.naydenov/morph",
    "description": "Template engine",
    "version": "3.3.1",
    "license": "MIT",
    "author": "Peter Naydenov",
    "main": "./src/main.js",
    "type": "module",
    "types": "./dist/main.d.ts",
    "exports": {
        ".": {
            "import": "./src/main.js",
            "require": "./dist/morph.cjs",
            "default": "./src/main.js"
        },
        "./package.json": "./package.json",
        "./dist/*": "./dist/*",
        "./src/*": "./src/*"
    },
    "scripts": {
        "test": "mocha test",
        "cover": "c8 mocha",
        "build": "npm run build:types && rollup -c",
        "build:types": "tsc"
    },
    "dependencies": {
        "@peter.naydenov/stack": "^3.0.0",
        "@peter.naydenov/walk": "^5.0.2"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "c8": "^10.1.3",
        "chai": "6.2.2",
        "esm": "^3.2.25",
        "mocha": "12.0.0-beta-5",
        "rollup": "^4.56.0",
        "typescript": "^5.9.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/PeterNaydenov/morph.git"
    },
    "c8": {
        "include": [
            "src/**/*.js"
        ],
        "exclude": [
            "node_modules",
            "test"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ]
    },
    "keywords": [
        "template",
        "engine",
        "string",
        "function"
    ]
}
